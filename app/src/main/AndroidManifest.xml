<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="adil.app.memorygame">

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_game"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_game"
        android:supportsRtl="true"
        android:theme="@style/Theme.MemoryGame">
        <activity android:name=".ui.game_screen.GameActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.high_score_screen.HighScoreActivity" />
    </application>

</manifest>